<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RadioGroup
        android:id="@+id/radioLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:text="FranÃ§ais"
            android:id="@+id/frenchRadio"
            android:layout_weight="0.16"
            android:clickable="true"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:id="@+id/englishRadio"
            android:layout_weight="0.16"
            android:clickable="true" />

    </RadioGroup>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Maison"
            android:id="@+id/home" />

        <EditText
            android:layout_width="227dp"
            android:layout_height="60dp"
            android:id="@+id/newHome"
            android:hint="Ajouter maison"
            android:textColor="#030303"
            android:textColorHint="#edebeb"
            android:layout_centerHorizontal="true"
            android:textCursorDrawable= "@null"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valider"
            android:id="@+id/submitHome"
            android:layout_gravity="right" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Travail"
            android:id="@+id/work" />

        <EditText
            android:layout_width="219dp"
            android:layout_height="60dp"
            android:id="@+id/newWork"
            android:hint="Ajouter travail"
            android:textColor="#030303"
            android:textColorHint="#edebeb"
            android:layout_centerHorizontal="true"
            android:textCursorDrawable= "@null"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valider"
            android:id="@+id/submitWork"
            android:layout_gravity="right" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retour"
        android:id="@+id/returnButton"
        android:layout_gravity="right" />

</LinearLayout>