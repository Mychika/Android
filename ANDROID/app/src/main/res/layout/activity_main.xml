<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Settings"
        android:id="@+id/settingsButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#cbd8fc"
        android:elegantTextHeight="false"
        android:shadowColor="#0f1830"
        android:textColor="#04060e"
        android:textAppearance="@color/accent_material_dark"
        android:singleLine="false"
        android:textSize="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:text="Timetable"
        android:id="@+id/timeButton"
        android:layout_marginTop="145dp"
        android:layout_centerHorizontal="true"
        android:background="#cbd8fc"
        android:elegantTextHeight="false"
        android:shadowColor="#0f1830"
        android:textColor="#04060e"
        android:textAppearance="@color/accent_material_dark"
        android:singleLine="false"
        android:textSize="@dimen/abc_dialog_padding_material" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:text="Map"
        android:id="@+id/mapButton"
        android:textSize="@dimen/abc_dialog_padding_material"
        android:layout_marginTop="225dp"
        android:layout_centerHorizontal="true"
        android:background="#cbd8fc"
        android:elegantTextHeight="false"
        android:shadowColor="#0f1830"
        android:textColor="#04060e"
        android:textAppearance="@color/accent_material_dark"
        android:singleLine="false" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:text="Lines"
        android:id="@+id/linesButton"
        android:layout_marginTop="305dp"
        android:layout_centerHorizontal="true"
        android:background="#cbd8fc"
        android:elegantTextHeight="false"
        android:shadowColor="#0f1830"
        android:textColor="#04060e"
        android:textAppearance="@color/accent_material_dark"
        android:singleLine="false"
        android:textSize="@dimen/abc_dialog_padding_material" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:text="Next train"
        android:id="@+id/trainButton"
        android:layout_marginTop="65dp"
        android:layout_centerHorizontal="true"
        android:background="#cbd8fc"
        android:elegantTextHeight="false"
        android:shadowColor="#0f1830"
        android:textColor="#04060e"
        android:textAppearance="@color/accent_material_dark"
        android:singleLine="false"
        android:textSize="@dimen/abc_dialog_padding_material" />
</RelativeLayout>
